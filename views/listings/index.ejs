<%layout("/layouts/boilerPlate")%>

<body>
    <br>
    <h2>All Listings</h2>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let listing of allListings){%>  
            <a href="/listings/<%= listing._id %>" class="listing-links">  
            <div class="card col listing-card">
                <img src="<%=listing.image%>" class="card-img-top" alt="listing-image">
                <div class="card-img-overlay">ABC</div>
                <div class="card-body">
                  <p class="card-text"><%=listing.title%> 
                  <br/> 
                  &#8377; <%=listing.price.toLocaleString("en-In")%>/night</p>
                  </div>
              </div>
            </a>
            <%}%>  
        </div>



    


</body>
